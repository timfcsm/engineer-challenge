# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
insert_final_newline = true

[{*.json,.*rc,*.yaml,*.yml,*.conf}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[_templates/**.ejs.t]
insert_final_newline = false
